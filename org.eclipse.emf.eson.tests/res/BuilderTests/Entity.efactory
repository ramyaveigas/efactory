use ecore.*

 EPackage entity {
 	nsURI: "http://com/googlecode/efactory/examples/entity"
 	nsPrefix: "entity"
 	
 	eClassifiers: [ 
 		EClass Type {
	 		abstract: true
	 		
	 	    eStructuralFeatures : [ EAttribute name {         
	 			eType : EString
	 		} ]
	 	}    
		EClass Model {
	 		eStructuralFeatures : [ EReference elements {
	 	     	containment : true
	 	     	upperBound : -1
	 	     	eType : Type
	 	     } ]
 		}  
	  	EClass SimpleType {
 	    	eSuperTypes : [ Type ]
	 	}  
 		EClass Property {
 			eStructuralFeatures : [ 
 				EReference type {         
 					eType : Type
		 		}
				EAttribute name {         
 					eType : EString
 				}
				EAttribute many {         
 					eType : EBoolean
 				}
 		}    
 	 	EClass Entity {
 			eSuperTypes : [ Type ]
 			eStructuralFeatures : [
 				EReference extends {           
		 			eType : Entity
		 			upperBound : -1
		 		} 
		 		EReference properties {         
		 			eType : Property
		 			containment : true     
		 	     	upperBound : -1
		 		}
		 	] 
 	}   
 }
 